@model IEnumerable<TradingAppClient.Presentation.Website.Models.PortfolioStockViewModel>

@{
    ViewData["Title"] = "Your Portfolio";
}

<p>
    <a asp-controller="Stock" asp-action="Search">Add transaction</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Stock.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Stock.Ticket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BuyDate)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <td>
                @Html.DisplayFor(model => item.Stock.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.Stock.Ticket)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuyDate)
            </td>
            <td>
                <a asp-controller="PortfolioStock" asp-action="Delete">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
